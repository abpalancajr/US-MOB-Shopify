    {% if linklists[link_handle] != empty %}
    <div class="drop-down-menu">
      <div class="drop-down-menu-title">
        <h1>{{ settings.megamenu_subtitle_header[j] }}</h1>
        <p>{{ linklists[link_handle].title }}</p>
      </div>
      <div style="clear: both; float: none"></div>
      <ul class="inner" style="height: 250px; column-width: 150px; column-count: auto; column-fill: auto; width: auto; border: none;">
        {% for l in linklists[link_handle].links %}
        <li>
          <a id="{{ l.handle }}" href="{{ l.url }}"{% if l.active %} class="current"{% endif %}>
            <span>{{ l.title }}</span></a>
        </li>

        {% comment %}
        <div class="inner">
          <!-- Menu level 2 -->
          <a id="{{ l.handle }}" href="{{ l.url }}"{% if l.active %} class="current"{% endif %}>
            <span>{{ l.title }}</span>
            {% if settings[style_dropdown_mega_menu] == "style_3" %}
            {% for collection in collections %}
            {% if collection.handle ==  l.handle %}
            {{ collection.image.src | collection_img_url: 'large' | img_tag: collection_title }}
            {% endif %}
            {% endfor %}
            {% endif %}
            <div class="mask"></div>
          </a>

          {% if  linklists[l.handle] != empty %}
          <ul class="dropdown">
            {% for child_l in linklists[l.handle].links %}
            <!-- Menu level 3 -->
            <li>
              <a href="{{ child_l.url }}"{% if child_l.active %} class="current"{% endif %}>
                <span>{{ child_l.title }} </span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
        </div>
      {% endcomment %}

      {% endfor %}

      </ul>
    <div class="megamenu-image " style="float: right;">
      {% for image in settings.megamenu_images[j] %}
      {{ image | asset_url | img_tag }}
      {% endfor %}
    </div>
    {% endif %}
  </div>

