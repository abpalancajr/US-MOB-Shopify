/*----------  BTAN FOOTER Start  ----------*/
.site-footer.footer-btan {
  background: #383838;

  .container {
    @media screen and (max-width: 1024px) {
      padding-bottom: 15px;
    }

    .footer-top {
      padding-bottom: 0px;
      padding-top: 20px;

      li {
        margin-bottom: 0;

        a {
          font-size: 11px;
          font-family: 'book';
          letter-spacing: 0;
          text-decoration: none;
          -webkit-font-smoothing: initial;

          &:hover {
            text-decoration: underline;
          }
        }
      }

      .col-1 {
        @media screen and (min-width: 1025px) {
          width: 22%;
        }

        ul {
          li {
            a {
              color: rgb(255, 255, 255);
              text-transform: uppercase;
            }
          }
        } 
      }

      .col-2 {
        @media screen and (min-width: 1025px) {
          width: 22%;
        }

        ul {
          li:first-child {
            a {
              color: rgb(255, 255, 255);
            }
          }
        }
      }

      .col-3 {
        @media screen and (min-width: 1025px) {
          width: 22%;
        }
        
        // Hide empty menu on mobile
        @media screen and (max-width: 560px) {
          display: none;
        }

        ul {
          li:first-child {
            a {
              color: rgb(255, 255, 255);
            }
          }
        }
      }

      .col-4 {
        @media screen and (min-width: 1025px) {
          width: 56%;
        }

        @media screen and (max-width: 1024px) {
          width: 100% !important;
          text-align: center;

          > ul {
            float: none;

            > li {
              text-align: center;
            }
          }
        }

        .alibaba {
          float: right;
          clear: right;
          text-align: right;
          margin-top: 15px;
          margin-bottom: 15px;

          @media screen and (max-width: 1024px) {
            float: none;
            text-align: center;
          }
        }

        .cosmoprof {
          float: left;
          clear: right;
          margin-bottom: 15px;

          @media screen and (max-width: 1024px) {
            float: none;
            text-align: center;
          }

          img {
            width: 90px;
          }
        }

        .taneasy-warranty {
          float: right;
          clear: right;
          text-align: right;
          margin-bottom: 10px;
          margin-top: 20px;

          @media screen and (max-width: 1024px) {
            float: none;
            text-align: center;
          }

          a {
            color: white;

            &:hover {
              text-decoration: underline;
            }
          }
        }

        .social-networks {
          display: inline-block;
          float: left;
          margin: 0;
          padding: 0;
          list-style: none;
          vertical-align: top;

          @media screen and (max-width: 1024px) {
            float: none;
            text-align: center;
          }    

          li {
            float: left;
            margin: 5px;

            a {
              float: left;
              overflow: hidden;
              width: 18px;
              height: 15px;
              margin: 5px 4px;
              text-indent: -9999px;

              &.facebook {
                background: url(facebook-topbar-icon-brown.png) no-repeat;
                background-position: center center;
                background-size: contain;
              } 

              &.pinterest {
                background: url(pinterest-topbar-icon-brown.png) no-repeat;
                background-position: center center;
                background-size: contain;
              }

              &.linkedin {
                background: url(linkedin-topbar-icon-brown.png) no-repeat;
                background-position: center center;
                background-size: contain;
              }

              &.youtube {
                background: url(youtube-topbar-icon-brown.png) no-repeat;
                background-position: center center;
                background-size: contain;
              }

              &.instagram {
                background: url(instagram-topbar-icon-brown.png) no-repeat;
                background-position: center center;
                background-size: contain;
              }

              &.twitter {
                background: url(twitter-topbar-icon-brown.png) no-repeat;
                background-position: center center;
                background-size: contain;            
              }

              &.search {
                background: url(search-topbar-icon-brown.png) no-repeat;
                background-size: contain;
              }
            }
          }
        } 
      }

      .col-5 {
        .taneasy-warranty {
          a {
            float: right;
            line-height: 4;
            color: white;

            &:hover {
              text-decoration: underline;
            }
          }
        }
      }

      .col-1,
      .col-2,
      .col-3,
      .col-4 {
        box-sizing: border-box;

        > ul {
          > li {
            a {
              text-decoration: none;
              -webkit-font-smoothing: initial;

              &:hover {
                text-decoration: underline;
              }
            }
          }
        }
      }
    }
  }

  .very-bottom-footer {
    background: #383838;

    .text,
    .copy {
      text-transform: initial;
    }
  }
}
/*----------  BTAN FOOTER End  ----------*/

